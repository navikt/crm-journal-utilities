<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Theme categorization</masterLabel>
    <description>Component for efficient categorization by theme group, theme and subtheme</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="themeGroup" type="String" label="Theme Group: (Salesforce ID)" />
            <property name="theme" type="String" label="Theme: (Salesforce ID)" />
            <property name="subtheme" type="String" label="Subtheme: (Salesforce ID)" />
            <property name="subtype" type="String" label="Subtype: (Salesforce ID)" />
            <property name="optionalTheme" type="Boolean" label="Make Theme field optional"
                default="false" role="inputOnly" />
            <property name="paddingBottom" type="Boolean" label="Add padding to the bottom"
                default="false" role="inputOnly" />
            <property name="themeSet" type="String" label="Theme set"
                description="Choose ALL or ARCHIVE_THEMES" default="ARCHIVE_THEMES" role="inputOnly" />
            <property name="themeGroupCode" type="String"
                label="Output theme group code from kodeverk" role="outputOnly" />
            <property name="themeCode" type="String" label="Output theme code from kodeverk"
                role="outputOnly" />
            <property name="subthemeCode" type="String" label="Output subtheme code from kodeverk"
                role="outputOnly" />
            <property name="subtypeCode" type="String" label="Output subtype code from kodeverk"
                role="outputOnly" />
            <property name="variant" type="String" label="Component variant" default="DEFAULT"
                description="available variants DEFAULT, HIDE_THEME_GROUP, HIDE_SUBTHEME, HIDE_THEME_GROUP_AND_SUBTHEME"
                role="inputOnly" />
            <property name="autoFocus" type="String" label="Auto focus on theme group"
                default="false"
                role="inputOnly" />
            <property name="twoColumns" type="Boolean" label="Show in two columns"
                default="false" role="inputOnly" />
            <property name="optionalThemeGroup" type="Boolean"
                label="Make Theme group field optional"
                default="false" role="inputOnly" />
            <property name="checkIfGjelderIsRequired" type="Boolean"
                label="Check if Gjelder should be required"
                default="false" role="inputOnly" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>